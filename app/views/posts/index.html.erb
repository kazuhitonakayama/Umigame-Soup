
<p id="notice"><%= notice %></p>

<h1>ウミガメのスープ問題一覧</h1>

<h3>ようこそ！<%= current_user.name %>さん</h3>
<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.username %>さんの投稿</td>
        <td><%= post.body %></td>
        <td><%= link_to(content_tag(:i, '', class: 'fas fa-angle-double-right'), post_path(post)) %></td>
        <td><%= link_to(content_tag(:i, '', class: 'far fa-edit'), edit_post_path(post)) %></td>
        <td><%= link_to(content_tag(:i, '', class: 'far fa-trash-alt'), post_path(post), :method => :delete) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "サインアウト",destroy_user_session_path, class: "nav-link",method: :delete %>
<%= link_to '新規問題の作成', new_post_path %>
