
<p id="notice"><%= notice %></p>

<h1 class="index-title">ウミガメのスープ問題一覧</h1>
<div class="index-questionarea">
  <% @posts.each do |post| %>
    <div class="index-question">
      <p><%= post.username %>さんの投稿</p>
      <p><%= post.body %></p>
      <div class="index_icon_area">
        <p><%= link_to(content_tag(:i, '', class: 'fas fa-angle-double-right'), post_path(post)) %></p>
        <p><%= link_to(content_tag(:i, '', class: 'far fa-edit'), edit_post_path(post)) %></p>
        <p><%= link_to(content_tag(:i, '', class: 'far fa-trash-alt'), post_path(post), :method => :delete) %></p>
        <p><%= link_to(content_tag(:i, '', class: 'far fa-comment-dots'), new_post_comment_path(post)) %></p>
      </div>
      <p></p>(♡<%= post.liked_users.count %>)
      <%# ここをshow.html.erbに記述したらいける %>
        <% if current_user.already_liked?(current_user) %>
          <p></p><%= link_to 'いいねを取り消す', post_like_path(post), method: :delete %>
        <% else %>
          <p></p><%= link_to 'いいね', post_likes_path(post),method: :post %>
        <% end %>
      <%# ここをshow.html.erbに記述したらいける %>
    </div>
  <% end %>
</div>